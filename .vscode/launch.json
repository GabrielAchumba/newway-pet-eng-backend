{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "NewwayPetEngBackend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\main.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "cppdbg",
            "name": "Dexa C++ Addon",
            "request": "attach",
            "program": "${workspaceFolder}/build/Debug/volumeforecast.node", // build\Debug\volumeforecast.node
            "processId": "${command:PickProcess}", // Select the Node.js process
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",//"/path/to/gdb", // Adjust for your debugger (e.g., gdb, lldb)
            "setupCommands": [
                { "text": "-enable-pretty-printing", "description": "Enable GDB pretty printing", "ignoreFailures": true }
            ]
        },
        {
            "name": "Python Helper",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }

    ]
}